<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>gov.ca.water</groupId>
	<artifactId>eppt-parent</artifactId>
	<version>1.2.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>EPPT Parent</name>

	<modules>
		<module>../branding</module>
		<module>../application</module>
		<module>../eppt-nbui</module>
		<module>../eppt-core</module>
		<module>../eppt-ui</module>
		<module>../eppt-scenario</module>
		<module>../eppt-calsim-gui</module>
		<module>../eppt-vista</module>
        <module>../eppt-report-engine</module>
		<module>../eppt-jasper-engine</module>
		<module>../eppt-plots</module>
		<module>../eppt-trend-reporting</module>
	</modules>

	<scm>
		<developerConnection>scm:git:https://github.com/CalSimCalLite/DWR-Enhanced-Post-Processing-Tool.git</developerConnection>
	</scm>
	<properties>
		<netbeans.version>RELEASE150</netbeans.version>
		<brandingToken>dwr_eppt</brandingToken>
		<maven.build.timestamp.format>yyyy-MM-dd-HHmmss</maven.build.timestamp.format>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<repositories>
		<!--
		Repository hosting NetBeans modules, especially APIs.
		Versions are based on IDE releases, e.g.: RELEASE691
		To create your own repository, use: nbm:populate-repository
		-->
		<repository>
			<id>hec-nexus-releases</id>
			<url>https://www.hec.usace.army.mil/nexus/repository/maven-releases</url>
		</repository>
		<repository>
			<id>github</id>
			<url>https://maven.pkg.github.com/CalSimCalLite/DWR-Enhanced-Post-Processing-Tool/</url>
		</repository>
		<repository>
			<id>brockmann</id>
			<url>https://www.brockmann-consult.de/mvn/os/</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.netbeans.utilities</groupId>
				<artifactId>nbm-maven-plugin</artifactId>
				<version>4.5</version>
				<extensions>true</extensions>
				<configuration>
					<brandingToken>${brandingToken}</brandingToken>
					<cluster>${brandingToken}</cluster>
				</configuration>
			</plugin>
			<plugin>
				<!-- NetBeans 6.9+ requires JDK 6, starting NetBeans 7.4 source 1.7 is required -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.10.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.2</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0-M7</version>
			</plugin>
		</plugins>
	</build>
</project>
